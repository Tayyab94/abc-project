@model ClassLibrary1.PakClassified.SubCatagory

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index","SubCatagory",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SubCatagory</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name,"Sub Catagory",new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                @Html.TextBox("sbCName",null, new { @class = "form-control" ,placeholder="SubCatagory Name"})
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Select Catagory", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-7">
               @Html.DropDownList("CatagoryId",(IEnumerable<SelectListItem>)ViewBag.Catagory,"- Select Catagory -", new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ShowCatagory","Catagory")
</div>
