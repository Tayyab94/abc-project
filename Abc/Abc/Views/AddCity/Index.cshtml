@model ClassLibrary1.City
@{
    ViewBag.Title = "Index";
}

<h2>City Page</h2>
<div class="row">
    <div class="col-lg-8 col-lg-offset-3 bg-info">
        @using (Html.BeginForm("Index","AddCity",FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, "City Name", htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-7">
                        @Html.TextBox("cityName", null, new { @class = "form-control", placeholder = "City's Name" })
                        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Province, "Select Province", htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-7">
                        @Html.DropDownList("ProvinceList", (IEnumerable<SelectListItem>)ViewBag.citiList, "- Select Province -", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-5 col-md-7">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>
