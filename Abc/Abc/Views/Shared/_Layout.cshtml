    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapse" data-toggle="collapse" data-target="#mainMenu">
                    <span class="glyphicon glyphicon-circle-arrow-down"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index"><span class="glyphicon glyphicon-tags"></span>WebSite</a>
            </div>
            <div class="collapse navbar-collapse" id="mainMenu">
                <ul class="nav navbar-nav">
                    <li><a href="#">Featured</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" rule="button" aria-haspopup="true" aria-expanded="false">Catagories<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Property</a></li>
                            <li><a href="#">Mobiles</a></li>
                            <li><a href="#">Books</a></li>
                        </ul>
                    </li>
                    <li><a href="/Advertisement/PostAdvertisement">Post Advertisement</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (currentUser == null)
                    {
                        <li><a href="/Users/Login"><span class="glyphicon glyphicon-log-in"></span>Login</a></li>
                  
                        <li><a href="/User/SignUp"><span class="glyphicon glyphicon-user"></span>SignUp</a></li>

                    }
                    else
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span>@currentUser.FullName<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/Users/UserProfile"><span class="glyphicon glyphicon-user"></span> Profile</a></li>
                                <li><a href="/Users/RecoverPassword"><span class="glyphicon glyphicon-lock"></span> Change Password</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="/Users/Logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                            </ul>
                        </li>
                    }


                </ul>
            </div>
        </div>
    </nav>
    <header class="container-fluid" style="padding:0px;">
        @RenderSection("Banner", false)
    </header>
    <div class="container-fluid" id="maincontent">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("myScript", false)
