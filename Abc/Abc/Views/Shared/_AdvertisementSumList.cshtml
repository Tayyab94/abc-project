@using Abc.Models;
@model IEnumerable<AdvertisementSumModel>
    @if(Model!=null)
    {
        foreach (var m in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" style="padding-left:0px;width:200px;height:150px">
                <div class="adv-item">
                    <img src="@m.ImageUrl" alt="product-1" />
                    <h2>@m.Title</h2>

                    <p>@($"Rs.{m.Price}/-")</p>
                    <div class="adv-btn btn-primary">More</div>
                </div>
            </div>
        }
    }
